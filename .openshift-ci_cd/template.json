{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "flask-app",
    "annotations": {
      "descriptions": "Flask webapp on Python 2.7"
    }
  },
  "objects": [
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "application": "${APP_NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "strategy": {
          "type": "Source",
          "sourceStrategy": {
            "from": {
              "kind": "ImageStreamTag",
              "namespace": "openshift",
              "name": "python:2.7"
            }
          }
        },
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_URL}",
            "ref": "${GIT_BRANCH}"
          }
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${APP_NAME}:latest"
          }
        }
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}-pipeline",
        "labels": {
          "application": "${APP_NAME}"
        }
      },
      "spec": {
        "triggers": [
          {
            "type": "GitHub",
            "github": {
              "secret": "${GITHUB_WEBHOOK_SECRET}" 
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_URL}",
            "ref": "${GIT_BRANCH}"
          }
        },
        "strategy": {
          "type": "JenkinsPipeline",
          "jenkinsPipelineStrategy": {
            "jenkinsfilePath": "${JENKINSFILE_PATH}"
          }
        },
        "runPolicy": "Serial"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}"
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "application": "${APP_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Rolling",
          "rollingParams": {
            "updatePeriodSeconds": 1,
            "intervalSeconds": 1,
            "timeoutSeconds": 600,
            "maxUnavailable": "25%",
            "maxSurge": "25%"
          }
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "${APP_NAME}"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "${APP_NAME}:latest"
              }
            } 
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "test": false,
        "selector": {
          "name": "${APP_NAME}"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "${APP_NAME}"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "${APP_NAME}",
                "image": "",
                "ports": [
                  {
                    "containerPort": 80,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "GUNICORN_PROCESSES",
                    "value": "${GUNICORN_PROCESSES}"
                  },
                  {
                    "name": "GUNICORN_THREADS",
                    "value": "${GUNICORN_THREADS}"
                  },
                  {
                    "name": "GUNICORN_WORKER_CLASS",
                    "value": "${GUNICORN_WORKER_CLASS}"
                  }
                ],
                "readinessProbe": {
                  "httpGet": {
                    "path": "/status",
                    "port": 8080
                  },
                  "initialDelaySeconds": 10,
                  "timeoutSeconds": 1
                },
                "livenessProbe": {
                  "httpGet": {
                    "path": "/status",
                    "port": 8080
                  },
                  "timeoutSeconds": 1
                },
                "imagePullPolicy": "Always"
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "application": "${APP_NAME}"
        }
      },
      "spec": {
        "host": "",
        "to": {
          "kind": "Service",
          "name": "${APP_NAME}",
          "weight": 100
        },
        "port": {
          "targetPort": "http"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "${APP_NAME}",
        "labels": {
          "application": "${APP_NAME}"
        }
      },
      "spec": {
        "ports": [
          {
            "name": "http",
            "protocol": "TCP",
            "port": 80,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "${APP_NAME}"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    }
  ],
  "parameters": [
    {
      "name": "APP_NAME",
      "displayName": "Application name",
      "description": "Application service name",
      "value": "flask-app",
      "required": true
    },
    {
      "name": "GIT_BRANCH",
      "displayName": "GIT source branch",
      "description": "Branch to checkout code from",
      "value": "master"
    },
    {
      "name": "GIT_URL",
      "displayName": "GIT repository URL",
      "description": "URL of GIT repository to checkout code from",
      "value": "https://github.com/tux-o-matic/os-sample-python",
      "required": true
    },
    {
      "name": "GITHUB_WEBHOOK_SECRET",
      "displayName": "GitHub webhooks secret",
      "description": "The secret used to make the webhook URL unique and hard to predict",
      "generate": "expression",
      "from": "[a-zA-Z0-9]{40}"
    },
    {
      "name": "GUNICORN_PROCESSES",
      "displayName": "Gunicorn worker processes",
      "description": "The number of Gunicorn worker processes for handling requests",
      "value": "3"
    },
    {
      "name": "GUNICORN_THREADS",
      "displayName": "Gunicorn worker threads",
      "description": "Run each worker with the specified number of threads"
      "value": "1"
    },
    {
      "name": "GUNICORN_WORKER_CLASS",
      "displayName": "Gunicorn worker class",
      "value": "gevent"
    },
    {
      "name": "JENKINSFILE_PATH",
      "displayName": "Jenkinsfile path in the repo",
      "description": "The path and name of the Jenkinsfile within the Git repository",
      "value": ".openshift-ci_cd/Jenkinsfile"
    }
  ]
}
